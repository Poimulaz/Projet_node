extends ../layout

block content

    if (user)
        h2= ("log as:   " + user.name + " " + user.nickname + "  " + user.firstName)
        a(href='/users/deconnexion')
            input(type='button', value='deconnexion')

    form(action='/users?_method=PUT' method='POST')
        input(type='text' name="firstname" placeholder='FirstName' value=user.firstName)
        br
        input(type='text' name="name" placeholder='Name' value=user.name)
        br
        input(type='text' name="nickname" placeholder='nickname' value=user.nickname)
        br
        input(type='mail' name="email" placeholder='email' value=user.email)
        br
        input(type='submit')

    a(href='/users')
        input(type='button', value='acceuil')
